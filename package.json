{
  "name": "beam-client-node",
  "version": "0.13.0",
  "description": "Client library for interacting with the beam API.",
  "main": "dist/commonjs",
  "module": "dist/module",
  "typings": "dist/module/index.d.ts",
  "scripts": {
    "test:unit": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha --compilers ts:ts-node/register test/unit/**/*.test.js",
    "test:integrate": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha --compilers ts:ts-node/register test/integration/**/*.test.js",
    "test": "npm run test:unit && npm run lint",
    "build:ts:module": "tsc --declaration",
    "build:ts:commonjs": "tsc --outDir dist/commonjs --module commonjs --target es6",
    "build": "rimraf dist && npm run build:ts:module && npm run build:ts:commonjs",
    "prepublish": "npm run build",
    "lint": "tslint --type-check --project tsconfig.json \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WatchBeam/beam-client-node.git"
  },
  "keywords": [
    "beam",
    "client",
    "api",
    "library",
    "oauth"
  ],
  "author": "Beam/Microsoft <contact@beam.pro>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WatchBeam/beam-client-node/issues"
  },
  "homepage": "https://github.com/WatchBeam/beam-client-node",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.30",
    "@types/deepmerge": "^1.3.1",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.51",
    "@types/request": "0.0.42",
    "@types/ws": "0.0.40",
    "chai": "^3.5.0",
    "chai-subset": "^1.3.0",
    "cross-env": "^4.0.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.8.0",
    "ts-node": "^3.0.2",
    "tslint": "^4.5.1",
    "tslint-microsoft-contrib": "^4.0.1",
    "typescript": "~2.2.0",
    "ws": "^1.0.1"
  },
  "dependencies": {
    "deepmerge": "^1.3.2",
    "request": "^2.79.0"
  }
}
