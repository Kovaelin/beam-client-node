{
    "root": true,
    "extends": "airbnb-base/legacy",
    "env": {
        "node": true
    },
    "rules": {
        "indent": [2, 4],
        "func-names": 0,
        "no-param-reassign": 0,
        "space-before-function-paren": [2, "always"],
        "vars-on-top": 0,
        "no-underscore-dangle": 0,
        "comma-dangle": [2, "always-multiline"],
        "array-bracket-spacing": [2, "never"]
    },
    "globals": {
        "Uint8Array": true,
        "Uint32Array": true,
        "ArrayBuffer": true,
        "DataView": true
    }
}
